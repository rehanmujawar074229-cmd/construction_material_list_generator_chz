import React from 'react';
import { X, Upload, Trash2, FolderOpen } from 'lucide-react';
import { SavedBill } from '../App';

interface HistoryModalProps {
  isOpen: boolean;
  onClose: () => void;
  history: SavedBill[];
  onLoad: (bill: SavedBill) => void;
  onDelete: (billNumber: string) => void;
}

const HistoryModal: React.FC<HistoryModalProps> = ({ isOpen, onClose, history, onLoad, onDelete }) => {
  if (!isOpen) return null;

  const handleDelete = (e: React.MouseEvent, billNumber: string) => {
    e.stopPropagation(); // Prevent triggering the onLoad event on the parent
    if (window.confirm(`Are you sure you want to delete list "${billNumber}"? This cannot be undone.`)) {
      onDelete(billNumber);
    }
  };

  return (
    <div className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50">
      <div className="bg-white rounded-lg shadow-xl w-full max-w-lg flex flex-col max-h-[90vh]">
        <div className="flex justify-between items-center p-4 border-b">
          <h3 className="text-lg font-semibold text-slate-800 flex items-center gap-2">
            <FolderOpen size={22} />
            Saved Lists
          </h3>
          <button onClick={onClose} className="text-slate-500 hover:text-slate-800">
            <X size={24} />
          </button>
        </div>

        <div className="p-4 overflow-y-auto">
          {history.length > 0 ? (
            <ul className="space-y-2">
              {history.map((bill) => (
                <li
                  key={bill.listNumber}
                  className="border rounded-lg p-3 group hover:bg-blue-50 hover:border-blue-400 cursor-pointer transition-all"
                  onClick={() => onLoad(bill)}
                >
                  <div className="flex justify-between items-center">
                    <div>
                      <p className="font-semibold text-slate-800 group-hover:text-blue-700">{bill.listNumber}</p>
                      <p className="text-sm text-slate-600">{bill.customerName || 'No Customer Name'}</p>
                      <p className="text-xs text-slate-500">Date: {bill.date} | Items: {bill.materials.length}</p>
                    </div>
                    <div className="flex items-center gap-2">
                       <button
                        onClick={(e) => handleDelete(e, bill.listNumber)}
                        className="p-2 rounded-full text-slate-500 hover:bg-red-100 hover:text-red-600 opacity-0 group-hover:opacity-100 transition-opacity"
                        aria-label="Delete list"
                      >
                        <Trash2 size={18} />
                      </button>
                      <Upload size={20} className="text-blue-500 opacity-0 group-hover:opacity-100 transition-opacity" />
                    </div>
                  </div>
                </li>
              ))}
            </ul>
          ) : (
            <div className="text-center py-12">
              <p className="font-semibold text-slate-600">No saved lists found.</p>
              <p className="text-sm text-slate-500 mt-1">Use the "Save" button to keep a record of your lists here.</p>
            </div>
          )}
        </div>

        <div className="flex justify-end p-4 border-t mt-auto">
          <button onClick={onClose} className="px-6 py-2 bg-slate-200 text-slate-800 rounded-md hover:bg-slate-300">
            Close
          </button>
        </div>
      </div>
    </div>
  );
};

export default HistoryModal;
